{
  "name": "villa",
  "version": "0.1.0",
  "private": true,
  "description": "Privacy-first identity and community companion app",
  "repository": {
    "type": "git",
    "url": "https://github.com/rockfridrich/villa.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && eslint .",
    "lint:fix": "next lint --fix && eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:security": "vitest run --config vitest.config.security.ts",
    "test:e2e": "playwright test",
    "test:watch": "vitest --config vitest.config.unit.ts",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@tanstack/react-query": "^5.50.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.400.0",
    "nanoid": "^5.1.6",
    "next": "14.2.0",
    "porto": "^0.2.37",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.3.0",
    "viem": "^2.20.0",
    "wagmi": "^2.12.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.0",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.3.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
