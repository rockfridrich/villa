{
  "name": "villa",
  "version": "0.1.0",
  "private": true,
  "description": "Privacy-first identity and community companion app",
  "repository": {
    "type": "git",
    "url": "https://github.com/rockfridrich/villa.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https",
    "dev:clean": "rm -rf .next && next dev",
    "dev:share": "./scripts/ngrok-share.sh",
    "dev:debug": "./scripts/ngrok-debug.sh",
    "qa": "./scripts/qa-start.sh",
    "qa:end": "./scripts/qa-end.sh",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && eslint .",
    "lint:fix": "next lint --fix && eslint . --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "test": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:security": "vitest run --config vitest.config.security.ts",
    "test:scripts": "bats tests/security/scripts/",
    "test:scripts:coordinate": "bats tests/security/scripts/coordinate.spec.bats",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:deployed": "BASE_URL=$URL playwright test --project=chromium",
    "test:watch": "vitest --config vitest.config.unit.ts",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules/.cache dist coverage",
    "prepare": "git config core.hooksPath .githooks || true",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "npm run check && npm run build && npm run test:e2e:chromium",
    "infra": "npx tsx src/lib/infra/cli.ts",
    "infra:cache:purge": "npx tsx src/lib/infra/cli.ts cloudflare cache purge-all",
    "infra:dns:list": "npx tsx src/lib/infra/cli.ts cloudflare dns list",
    "infra:status": "npx tsx src/lib/infra/cli.ts cloudflare zone status",
    "anvil": "anvil --mnemonic 'test test test test test test test test test test test junk'",
    "deploy:local": "cd contracts && source ~/.zshenv && forge script script/DeployLocal.s.sol --rpc-url http://127.0.0.1:8545 --broadcast",
    "test:contracts": "cd contracts && source ~/.zshenv && forge test -vvv"
  },
  "dependencies": {
    "@dicebear/adventurer": "^9.2.4",
    "@dicebear/avataaars": "^9.2.4",
    "@dicebear/bottts": "^9.2.4",
    "@dicebear/collection": "^9.2.4",
    "@dicebear/core": "^9.2.4",
    "@dicebear/thumbs": "^9.2.4",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@tanstack/react-query": "^5.50.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.400.0",
    "nanoid": "^5.1.6",
    "next": "14.2.0",
    "porto": "^0.2.37",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.3.0",
    "viem": "^2.20.0",
    "wagmi": "^2.12.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "autoprefixer": "^10.4.19",
    "cloudflare": "^5.2.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.0",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.0.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.3.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
