{
  "name": "@rockfridrich/villa-sdk",
  "version": "0.1.0",
  "description": "Villa Identity SDK - Privacy-first passkey authentication for Base network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "CLAUDE.txt",
    "README.md",
    "llms.txt"
  ],
  "sideEffects": false,
  "keywords": [
    "passkey",
    "authentication",
    "identity",
    "web3",
    "base",
    "webauthn",
    "porto",
    "villa"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rockfridrich/villa.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://developers.villa.cash",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "viem": "^2.0.0",
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "viem": {
      "optional": false
    },
    "zod": {
      "optional": false
    }
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.0.11",
    "tsup": "^8.5.1",
    "typescript": "^5.5.0",
    "viem": "^2.0.0",
    "vitest": "^4.0.16",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
