{
  "name": "@villa/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https",
    "dev:clean": "rm -rf .next && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && eslint .",
    "lint:fix": "next lint --fix && eslint . --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:security",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:security": "vitest run --config vitest.config.security.ts",
    "test:scripts": "bats tests/security/scripts/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "clean": "rm -rf .next node_modules/.cache"
  },
  "dependencies": {
    "@dicebear/adventurer": "^9.2.4",
    "@dicebear/avataaars": "^9.2.4",
